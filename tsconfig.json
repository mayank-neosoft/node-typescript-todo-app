{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": false,
    "target": "es2016",
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "baseUrl": "./src"
  },
  "include": ["src/**/*.ts", "test/**/*.spec.ts", "server.ts", "App.ts"],
  "exclude": ["node_modules"]
}
